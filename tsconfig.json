{
  "extends": "./tsconfig/tsconfig.base",
  "compilerOptions": {
    "outDir": "./build/tba-creator",
    "baseUrl": "src",
    "paths": {
      "io/*": ["io/*"],
      "schema/*": ["schema/*"],
      "parsers/*": ["parsers/*"],
      "types/*": ["types/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__mocks__"
  ]
}
