{
  "name": "create-tba-game",
  "version": "0.0.1",
  "description": "Creates a new Text-Based Adventure game utilising tba-creator",
  "main": "src/index.ts",
  "repository": "git@github.com:AaronLeoCooper/tba-creator.git",
  "author": "Aaron Leo Cooper <aaronleocooper@gmail.com>",
  "license": "MIT",
  "bin": {
    "create-tba-game": "build/index.js"
  },
  "files": ["build"],
  "scripts": {
    "start": "ts-node --project \"tsconfig.json\" \"src/index.ts\"",
    "prebuild": "npm run clean",
    "build": "tsc -p \"tsconfig.json\" && ncp \"src/templates\" \"build/templates\"",
    "clean": "rimraf \"./build\"",
    "validate": "run-s lint test build",
    "test": "jest --coverage --runInBand --ci",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "pretty": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@typescript-eslint/eslint-plugin": "1.7.0",
    "@typescript-eslint/parser": "1.7.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "jest": "24.7.1",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.17.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0"
  },
  "dependencies": {
    "@types/inquirer": "6.0.1",
    "@types/node": "11.13.6",
    "inquirer": "6.3.1",
    "typescript": "3.4.4"
  }
}
