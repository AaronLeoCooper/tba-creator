{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "rules": {
    "linebreak-style": ["error", "unix"]
  },
  "overrides": [
    {
      "files": ["**/*.spec.ts"],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": ["off"]
      }
    }
  ]
}
