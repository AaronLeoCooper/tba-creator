{
  "name": "tba-creator",
  "version": "0.0.1",
  "description": "Text-Based Adventure Creator - Turn data into a TBA game!",
  "main": "src/index.ts",
  "repository": "git@github.com:AaronLeoCooper/tba-creator.git",
  "author": "Aaron Leo Cooper <aaronleocooper@gmail.com>",
  "license": "MIT",
  "bin": {
    "tba-creator": "build/tba-creator/index.js",
    "tbac": "build/tba-creator/index.js",
    "create-tba-game": "build/create-tba-game/index.js"
  },
  "scripts": {
    "start": "ts-node --project \"tsconfig.json\" \"src/index.ts\"",
    "start:create": "ts-node --project \"tsconfig.create.json\" \"create-tba-game/index.ts\"",
    "build": "run-s clean build:*",
    "build:src": "tsc -p \"tsconfig.json\"",
    "build:create": "tsc -p \"tsconfig.create.json\"",
    "clean": "rimraf \"./build\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "run-s lint:*",
    "lint:src": "eslint \"src/**/*.ts\"",
    "lint:create": "eslint \"create-tba-game/**/*.ts\"",
    "pretty": "run-s pretty:*",
    "pretty:src": "prettier --write \"src/**/*.ts\"",
    "pretty:create": "prettier --write \"create-tba-game/**/*.ts\""
  },
  "devDependencies": {
    "@types/inquirer": "6.0.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.6",
    "@typescript-eslint/eslint-plugin": "1.7.0",
    "@typescript-eslint/parser": "1.7.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "jest": "24.7.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.17.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0"
  },
  "dependencies": {
    "inquirer": "^6.3.1",
    "toml": "^3.0.0",
    "typescript": "3.4.4"
  }
}
